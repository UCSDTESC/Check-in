{
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "../../dist/server-root",
    "rootDir": "../",
    "sourceMap": true,
    "module": "commonjs",
    "target": "es6",
    "importHelpers": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "types": ["node"],
    "paths": {
      "@Shared/*": ["../shared/*"],
      "@Config/*": ["./config/*"],
      "@Models/*": ["./models/*"],
      "@Services/*": ["./services/*"]
    },
    "lib": ["es6"],
  },
  "include": ["./**/*.ts", "../shared/**/*.ts"]
}