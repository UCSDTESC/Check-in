{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./src/assets/public/js/",
    "sourceMap": true,
    "noImplicitAny": true,
    "module": "commonjs",
    "target": "es6",
    "jsx": "react",
    "paths": {
      "*": [
        "types/*"
      ],
      "~/*": [
        "./src/client/*"
      ],
      "@Shared/*": [
        "./src/shared/*"
      ]
    },
    "typeRoots": [
      "./src/client/typings/",
      "node_modules/@types/"
    ],
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "dom",
      "es2018.promise"
    ],
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true
  },
  "include": [
    "./src/client/**/*",
    "./src/shared/**/*"
  ]
}